<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", load_lists_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_load_list_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", load_list_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.load_list.bill_date", :default => t("activerecord.labels.bill_date", :default => "Bill date")) %>:</b>
          <%= @load_list.bill_date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.bill_no", :default => t("activerecord.labels.bill_no", :default => "Bill no")) %>:</b>
          <%= @load_list.bill_no %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.from_org_id", :default => t("activerecord.labels.from_org_id", :default => "From org")) %>:</b>
          <%= @load_list.from_org_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.to_org_id", :default => t("activerecord.labels.to_org_id", :default => "To org")) %>:</b>
          <%= @load_list.to_org_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.state", :default => t("activerecord.labels.state", :default => "State")) %>:</b>
          <%= @load_list.state %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.note", :default => t("activerecord.labels.note", :default => "Note")) %>:</b>
          <%= @load_list.note %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.driver", :default => t("activerecord.labels.driver", :default => "Driver")) %>:</b>
          <%= @load_list.driver %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.vehicle_no", :default => t("activerecord.labels.vehicle_no", :default => "Vehicle no")) %>:</b>
          <%= @load_list.vehicle_no %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.load_list.test_state", :default => t("activerecord.labels.test_state", :default => "Test state")) %>:</b>
          <%= @load_list.test_state %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_load_list_path(@load_list), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), load_list_path(@load_list), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>