<%= semantic_form_for resource ,:remote => true,:html => {:id => "vip_form"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.input :org_id,:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:class => "select_org"} %>
  <% end%>
  <%= f.inputs :name,:phone,:mobile,:address,:id_number %>
  <%= f.inputs do %>
    <%= f.input :bank_id,:as => :select,:collection => Bank.where(:is_active => true),:include_blank => true %>
    <%= f.input :bank_card %>
    <%= f.input :receive_bank,:input_html => {:placeholder => "例如:xx银行xx省xx市xx支行" } %>
    <%= f.input :receive_address,:input_html => {:placeholder => "例如:xx省xx市" }  %>
    <%= f.input :config_transit_id,:as => :select,:collection => ConfigTransit.where(:is_active => true),:include_blank => false %>
    <%= f.input :is_active %>
  <%end%>
<% end%>
