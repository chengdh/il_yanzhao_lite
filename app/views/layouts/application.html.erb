<!DOCTYPE html>
<html>
  <head>
    <title><%="#{IlConfig.system_title}(#{current_user.default_org.name}|#{current_user.username})"%></title>
    <%= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style","jquery-ui-css/ui-lightness/jquery-ui-1.8.6.custom","SexyButtons/sexybuttons","fancybox/jquery.fancybox-1.3.4",'jquery.tipswift','ufd/ufd-base','ufd/plain/plain','jquery.notifyBar',"widgetTreeList","chart/visualize","chart/visualize-light","web-app-theme/override" %>
    <%= formtastic_stylesheet_link_tag %>
    <!--[if IE 6]>
         <link rel="stylesheet" type="text/css" href="/stylesheets/formtastic_ie6fixes.css" />
    <![endif]-->
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery-ui-1.8.7.custom.min'%>
    <%= javascript_include_tag 'jquery.ui.datepicker-zh-CN'%>
    <%= javascript_include_tag 'jquery.fancybox-1.3.4.pack'%>
    <%= javascript_include_tag 'jquery.tipswift'%>
    <%= javascript_include_tag 'livevalidation-1.3.min' %>
    <%= javascript_include_tag 'formtastic_validation-0.1.3.min' %>
    <%= javascript_include_tag 'jquery.ui.ufd' %>
    <%= javascript_include_tag 'jquery-impromptu.3.1.min' %>
    <%= javascript_include_tag 'jquery.livequery' %>
    <%= javascript_include_tag 'jquery.notifyBar' %>
    <%= javascript_include_tag 'bill_selector' %>
    <%= javascript_include_tag 'jquery.watermark.min' %>
    <%= javascript_include_tag 'widgetTreeList' %>
    <%= javascript_include_tag 'jquery.cookies.2.2.0.min' %>
    <%= javascript_include_tag 'chart/visualize.jQuery' %>
    <%= javascript_include_tag 'jquery.printElement.min' %>
    <%= javascript_include_tag 'enter2tab' %>
    
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1 id='client_name'><%=image_tag "#{IlConfig.client_logo}",:id => 'logo' %>&nbsp;&nbsp;<%= link_to "#{IlConfig.client_name}", :root %></h1>
        <div id="util-navigation">
          <ul class="wat-cf">
            <li>
              <%= link_to "#{current_user.username}(#{current_user.default_role.name}) | #{current_user.default_org.name} ", edit_password_users_path %>
            </li>
            <li><%=link_to "退出系统",destroy_user_session_path,:class => 'logout'%></li>
          </ul>
        </div>

        <div id="user-navigation">
          <ul class="wat-cf">
            <li>
              <div id='home-search-box-wrap'>
                <%=form_tag carrying_bills_path(:show_multi => ""),:id => 'home-search-form',:remote => true,:method => :get do%>
                  <%=text_field_tag "search[bill_no_or_goods_no_like]","",:id => 'home-search-box'%>
                  <%=image_submit_tag 'magnifier.png',:id => "btn_home_search" %>
                <%end%>
              </div>
            </li>
            <li id='adv-query-wrap'>
              <%=link_to "高级查询",search_carrying_bills_path,:class => 'fancybox' %>
            </li>
          </ul>
        </div>
        <div id="main-navigation">
          <ul class="wat-cf">
            <li class='first active'><%= link_to image_tag('home.png') + "业务看板", root_path %></li>
          </div>
        </div>    
        <div id="wrapper" class="wat-cf">
          <div id="main">
            <%= yield %>
            <div id="footer">
              <%= render "shared/footer" %>
            </div>
          </div>
          <div id="sidebar">
            <%= render "shared/menu_bar" %>
          </div>
        </div>    
      </div>
      <%= debug(params) if Rails.env.development? %>
    </body>
  </html>
  <%=notify_bar :flash => [:notice,:success,:error,:alert],:delay => 4500,:animation_speed => "slow" %>
