<div id="table_wrap"></div>
<table class='table'>
  <tbody>
    <tr>
      <td>中转部门:</td>
      <td><%=resource.org.name %></td>
      <td>中转日期:</td>
      <td><%=resource.bill_date.strftime('%Y-%m-%d')%></td>
    </tr>
    <tr>
      <td>中转公司:</td>
      <td><%=resource.transit_company.name%></td>
      <td>电话:</td>
      <td><%=resource.transit_company.phone%></td>
    </tr>
    <tr>
      <td>中转运费:</td>
      <td><%=resource.transit_carrying_fee%></td>
      <td>到货地电话:</td>
      <td><%=resource.to_station_phone%></td>
    </tr>
    <tr>
      <td>运单号:</td>
      <td><%= link_to "#{resource.carrying_bill.bill_no}/#{resource.carrying_bill.goods_no}",resource.carrying_bill,:class => 'fancybox'%></td>
      <td>备注:</td>
      <td colspan="3"><%=resource.note%></td>
    </tr>
  </tbody>
</table>
