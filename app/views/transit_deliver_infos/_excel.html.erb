<table cellspacing='0' cellpadding='0' border='0' style='border-collapse : collapse;border : thin solid #000;'>
  <thead>
    <tr>
      <td colspan='2'>部门:</td>
      <td colspan='2'><%=resource.org.name %></td>
      <td colspan='2'>提货日期:</td>
      <td colspan='2'><%=resource.bill_date.strftime('%Y-%m-%d')%></td>
      <td colspan='6'></td> 
    </tr>
    <tr>
      <td>备注:</td>
      <td colspan="13"><%=resource.note%></td>
    </tr>
    <tr>
      <td style='border : thin solid #000;'>序号</td>
      <td style='border : thin solid #000;'>运单号</td>
      <td style='border : thin solid #000;'>货号</td>
      <td style='border : thin solid #000;'>发货人</td>
      <td style='border : thin solid #000;'>收货人</td>
      <td style='border : thin solid #000;'>运费</td>
      <td style='border : thin solid #000;'>代收货款</td>
      <td style='border : thin solid #000;'>中转费</td>
      <td style='border : thin solid #000;'>代收运费</td>
      <td style='border : thin solid #000;'>中转票号</td>
      <td style='border : thin solid #000;'>中转手续费</td>
      <td style='border : thin solid #000;'>返款备注</td>
      <td style='border : thin solid #000;'>运费支付方式</td>
      <td style='border : thin solid #000;'>备注</td>
    </tr>
  </thead>
  <tbody>
    <%resource.carrying_bills.each_with_index do |bill,index| %>
      <tr>
        <td style='border : thin solid #000;'><%= index + 1 %></td>
        <td style='border : thin solid #000;'>&nbsp;<%= bill.bill_no %></td>
        <td style='border : thin solid #000;'>&nbsp;<%= bill.goods_no %></td>
        <td style='border : thin solid #000;'><%= bill.from_customer_name %></td>
        <td style='border : thin solid #000;'><%= bill.to_customer_name %></td>
        <td style='border : thin solid #000;'><%= bill.carrying_fee %></td>
        <td style='border : thin solid #000;'><%= bill.goods_fee%></td>
        <td style='border : thin solid #000;'><%= bill.transit_fee %></td>
        <td style='border : thin solid #000;'><%= bill.agent_carrying_fee%></td>
        <td style='border : thin solid #000;'>&nbsp;<%= bill.transit_bill_no %></td>
        <td style='border : thin solid #000;'><%= bill.transit_hand_fee %></td>
        <td style='border : thin solid #000;'></td>
        <td style='border : thin solid #000;'><%= bill.pay_type_des%></td>
        <td style='border : thin solid #000;'><%= bill.note %></td>
      </tr>
    <%end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan='5' style='text-align : right;border : thin solid #000;'>合计</td>
      <td style='border : thin solid #000;'><%=resource.carrying_bills.sum(:carrying_fee)%></td>
      <td style='border : thin solid #000;'><%=resource.carrying_bills.sum(:goods_fee)%></td>
      <td style='border : thin solid #000;'><%=resource.carrying_bills.sum(:transit_fee)%></td>
      <td style='border : thin solid #000;'><%=resource.carrying_bills.sum(:agent_carrying_fee)%></td>
      <td style='border : thin solid #000;'></td>
      <td style='border : thin solid #000;'><%=resource.carrying_bills.sum(:transit_hand_fee)%></td>
      <td style='border : thin solid #000;'></td>
      <td style='border : thin solid #000;'></td>
      <td style='border : thin solid #000;'></td>
    </tr>
  </tfoot>
</table>
