<table style='table-layout : fixed;width : 180mm;word-break : break-all;border-collapse : collapse;'>
  <thead>
    <tr>
      <th colspan='8' style='text-align : center;font-size : 14px;'>代收货款支付清单(<%=@transfer_payment_list.bank.name%>)</th>
    </tr>
    <tr>
      <td style='border : 1px solid #000;'>支付单位:</td>
      <td style='border : 1px solid #000;'><%=@transfer_payment_list.org.name%></td>
      <td style='border : 1px solid #000;'>经手人:</td>
      <td style='border : 1px solid #000;'><%= @transfer_payment_list.user.username %></td>
      <td style='border : 1px solid #000;'>清单日期:</td>
      <td colspan='5' style='border : 1px solid #000;'><%= @refound.bill_date.strftime('%Y-%M-%d') %></td>
    </tr>
    <tr>
      <td style='border : 1px solid #000;'>备注:</td>
      <td colspan='10' style='border : 1px solid #000;'><%=@transfer_payment_list.note %></td>
    </tr>
    <tr>
      <th style='border : 1px solid #000;'>序号</th>
      <th style='border : 1px solid #000;'>单据编号</th>
      <th style='border : 1px solid #000;'>实付代收货款</th>
      <th style='border : 1px solid #000;'>帐号</th>
      <th style='border : 1px solid #000;'>客户姓名</th>
      <th style='border : 1px solid #000;'>客户编号</th>
      <th style='border : 1px solid #000;'>开户行</th>
      <th style='border : 1px solid #000;'>原代收货款</th>
      <th style='border : 1px solid #000;'>扣运费</th>
      <th style='border : 1px solid #000;'>扣手续费</th>
      <th style='border : 1px solid #000;'>货号</th>
    </tr>
  </thead>
  <tbody>
    <%@transfer_payment_list.carrying_bills.each_with_index do |bill,index| %>
      <tr>
        <td style='border : 1px solid #000;'><%= index + 1 %></td>
        <td style='border : 1px solid #000;'><%= bill.bill_no %></td>
        <td style='border : 1px solid #000;'><%= bill.act_pay_fee %></td>
        <td style='border : 1px solid #000;'><%= bill.customer.bank_card %></td>
        <td style='border : 1px solid #000;'><%= bill.customer.name %></td>
        <td style='border : 1px solid #000;'><%= bill.customer.code %></td>
        <td style='border : 1px solid #000;'><%= bill.customer.bank.name%></td>
        <td style='border : 1px solid #000;'><%= bill.goods_fee%></td>
        <td style='border : 1px solid #000;'><%= bill.k_carrying_fee%></td>
        <td style='border : 1px solid #000;'><%= bill.k_hand_fee%></td>
        <td style='border : 1px solid #000;'><%= bill.goods_no %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan='2' style='text-align : right;border : 1px solid #000;'>合计</td>
      <td style='border : 1px solid #000;'><%=@transfer_payment_list.carrying_bills.sum(:act_pay_fee)%></td>
      <td style='text-align : right;border : 1px solid #000;'></td>
      <td style='text-align : right;border : 1px solid #000;'></td>
      <td style='text-align : right;border : 1px solid #000;'></td>
      <td style='text-align : right;border : 1px solid #000;'></td>
      <td style='border : 1px solid #000;'><%=@transfer_payment_list.carrying_bills.sum(:goods_fee)%></td>
      <td style='border : 1px solid #000;'><%=@transfer_payment_list.carrying_bills.sum(:k_carrying_fee)%></td>
      <td style='border : 1px solid #000;'><%=@transfer_payment_list.carrying_bills.sum(:k_hand_fee)%></td>
      <td style='border : 1px solid #000;'></td>
    </tr>
  </tfoot>
</table>
