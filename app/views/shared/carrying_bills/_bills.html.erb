<table class="table">
  <tr>             
    <th class="first">序号</th>
    <th>票据日期</th>
    <th>票号</th>
    <th>货号</th>
    <th>发货地</th>
    <th>到货地</th>
    <th>发货人</th>
    <th>收货人</th>
    <th>付款方式</th>
    <th>运费</th>
    <th>代收货款</th>
    <th>保价费</th>
    <th>&nbsp;</th>
  </tr>
  <% bills.each_with_index do |bill,index| %>
    <tr class="<%= cycle("odd", "even") %>">
      <td>
        <%= order_no(index,params[:cur_page]) %>
      </td>
      <td>
        <%=bill.bill_date.strftime('%Y-%m-%d')%>
      </td>
      <td>
        <%=bill.bill_no%>
      </td>
      <td>
        <%=bill.goods_no%>
      </td>
      <td>
        <%=bill.from_org_name%>
      </td>
      <td>
        <%=bill.to_org_name%>
      </td>
      <td>
        <%="#{bill.from_customer_name}(#{bill.from_customer_phone})"%>
      </td>

      <td>
        <%="#{bill.to_customer_name}(#{bill.to_customer_phone})"%>
      </td>
      <td>
        <%=pay_type_des(bill.pay_type) %>
      </td>
      <td>
        <%=bill.carrying_fee %>
      </td>
      <td>
        <%=bill.goods_fee %>
      </td>
      <td>
        <%=bill.insured_fee %>
      </td>
      <td>
        <%= link_to "查看",bill %> |
        <%= link_to "修改", self.send("edit_#{@param_name}_path",bill) %> 
      </td>
    </tr>          
  <% end -%>
</table>
<div class="actions-bar wat-cf">
  <div class="actions">
    <%=will_paginate bills%>
  </div>
</div>
