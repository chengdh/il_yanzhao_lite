<%= semantic_form_for VehicleFeeLine.search,:url => lines_vehicle_fees_path,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :vehicle_fee_fee_date_gte,:label => "记账日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :vehicle_fee_fee_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :vehicle_fee_org_id_eq,:label =>"记账单位",:as => :select,:collection => current_ability_orgs_for_select %>
    <%= f.input :to_org_id_eq,:label =>"到货地",:as => :select,:collection => exclude_current_ability_orgs_for_select %>
  <% end %>
  <%=f.buttons do %>
    <%=submit_tag "查询",:class => "sexybutton sexysimple sexyblue",:disable_with => "查询中..." %>
  <% end %>
<% end%>

