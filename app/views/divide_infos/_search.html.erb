<%= semantic_form_for resource_class.search,:url => collection_path,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :org_id_eq,:label => "分部",:as => :select,:collection => branches_for_select %>
    <%= f.input :bill_mth_eq,:label => "月份",:as => :select,:collection => months_ago_for_select %>
  <% end %>
  <%=f.buttons do %>
    <%=submit_tag "查询",:class => "sexybutton sexysimple sexyblue",:disable_with => "查询中..." %>
  <% end %>
<% end%>
