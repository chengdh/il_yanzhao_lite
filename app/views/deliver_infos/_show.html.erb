<table class='table' data-detailUrl='<%=deliver_info_carrying_bills_path(resource)%>' data-params='{"hide_fields" : ".carrying_fee,.insured_fee","show_fields" : ".carrying_fee_th,.th_amount"}'>
  <tr>
    <td>提货日期:</td>
    <td><%= resource.deliver_date.strftime('%Y-%m-%d') %></td>
    <td>提货人:</td>
    <td>
      <%=resource.customer_name %>
    </td>
    <td>身份证号:</td>
    <td> <%=resource.customer_no %></td>
  </tr>
  <tr>
    <td>备注</td>
    <td colspan='5'>
      <%=resource.note %>
    </td>
  </tr>
</table>
<div id="table_wrap"></div>
<div style='display : none;'>
  <%resource.carrying_bills.each do |bill|%>
    <%= render "shared/carrying_bills/show",:show => bill  %>
  <%end%>
</div>
