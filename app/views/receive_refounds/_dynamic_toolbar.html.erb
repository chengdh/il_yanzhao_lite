<!--动态toolbar-->
<div class="secondary-navigation">
  <ul class="wat-cf">
    <%if can? :read_arrive,resource_class%>
      <li class="first">
        <%= link_to image_tag("grid.png") , collection_path,:title => "#{resource_class.model_name.human}列表",:class => "tipsy"  %>
      </li>
      <li class="first">
        <%= link_to image_tag("grid-snap.png") , collection_path(:state_eq => :refunded),:title => "待确认收款清单",:class => "tipsy"  %>
      </li>

      <%if self.respond_to?("search_#{controller_name.tableize}_path")%>
        <li><%= link_to image_tag("application-search-result.png"),self.send("search_#{controller_name.tableize}_path"),:title => "查询#{resource_class.model_name.human}",:class => "fancybox tipsy" %></li>
      <%end%>
    <%end%>
    <%if params[:action] == "show"%>
      <li>
        <%= link_to image_tag("table-sum.png") , resource_path(resource,:show_group => 1),:title => "按发货地分组核算",:class => "tipsy"  %>
      </li>
      <%if can? :refound_confirm,resource%>
        <li>
          <%= link_to image_tag("auction-hammer--arrow.png") , process_handle_receive_refound_path(resource),:title => "收款确认",:class => "tipsy"  %>
        </li>
      <%end%>
    <%end%>
  </ul>
</div>   
