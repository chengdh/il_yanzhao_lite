<div id="login_dialog" class="login_dialog">
  <div class="top"></div>
  <div class="bottom">
    <%=form_tag update_session_default_path,:method => :put do %>
      <div id="user_name_login" class="login_type">
        <h1>请选择<strong>当前角色和机构</strong></h1>
        <p>
          <span class='overlay_wrapper'>
            <%=select_tag :cur_role_id,options_for_select(user_roles_for_select(current_user)),:id => "current_role_select" %>
          </span>
        </p>
        <p id='role_orgs_select'>
          <%= render 'roles/role_orgs_select',:current_role => current_user.roles.first %>
        </p>
      </div>
      <div id="signin_button">
        <%= link_to "退出",destroy_user_session_path,:class => "sexybutton sexysimple sexylarge sexyred" %>
        <%= submit_tag "确定",:class => "sexybutton sexysimple sexylarge sexygreen" %>
      </div>
    <%end%>
  </div>
</div>
<script type='text/javascript'>
  jQuery(function($) {
      //登录界面中,用户选择角色发生变化
      $('#current_role_select').change(function() {
        $.get('/roles/current_role_change', {
          role_id: $(this).val()
        },
        null,
        'script');
        });
      });
</script>
