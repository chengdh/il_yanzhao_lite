<!--动态toolbar-->
<div class="secondary-navigation">
  <ul class="wat-cf">
    <%if can? :read,resource_class%>
      <li class="first">
        <%= link_to image_tag("grid.png") , collection_path,:title => "#{resource_class.model_name.human}列表",:class => "tipsy"  %>
      </li>
      <%if self.respond_to?("search_#{controller_name.tableize}_path")%>
        <li><%= link_to image_tag("application-search-result.png"),self.send("search_#{controller_name.tableize}_path"),:title => "查询#{resource_class.model_name.human}",:class => "fancybox tipsy" %></li>
      <%end%>
    <%end%>
    <%if can? :create,resource_class%>
      <li>
        <%= link_to image_tag("application--plus.png"), new_resource_path,:title => "新建#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>

    <%if params[:action] == "new"%>
      <li>
        <%= link_to_function image_tag("disk-black.png"), "$('##{resource_class.model_name.underscore}_form').trigger('submit')",:title => "保存#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>
    <%if ["edit","show_authorize","show_claim","show_identify"].include? params[:action] %>
      <li>
        <%= link_to_function image_tag("disk-black.png"), "$('##{resource_class.model_name.underscore}_form').unbind('ajax:before').trigger('submit')",:title => "保存#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>
    <%if params[:action] == "show"%>
      <%if can? :show_authorize,resource%>
        <li>
          <%= link_to image_tag("balance--pencil.png"),  show_authorize_goods_exception_path(resource),:title => "核销理赔记录",:class => "tipsy" %>
        </li>
      <%end%>
      <%if can? :show_claim,resource%>
        <li>
          <%= link_to image_tag("money-coin.png"),  show_claim_goods_exception_path(resource),:title => "录入理赔信息",:class => "tipsy" %>
        </li>
      <%end%>
      <%if can? :show_identify,resource%>
        <li>
          <%= link_to image_tag("document-stamp.png"),  show_identify_goods_exception_path(resource),:title => "责任鉴定",:class => "tipsy" %>
        </li>
      <%end%>
    <%end%>
  </ul>
</div>   
