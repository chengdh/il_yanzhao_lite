<table class='table'>
  <tr>
    <td>上报机构</td>
    <td><%=resource.org.name%></td>
    <td>上报日期</td>
    <td><%=resource.bill_date.strftime("%Y-%m-%d")%></td>
    <td>上报人</td>
    <td><%=resource.user%></td>
  </tr>
  <tr>
    <td>异常类型</td>
    <td><%=resource.except_des %></td>
    <td>异常数量</td>
    <td><%=resource.except_num%></td>
    <td>运单号/货号</td>
    <td>
      <%=link_to "#{resource.carrying_bill.bill_no}/#{resource.carrying_bill.goods_no}",polymorphic_path(resource.carrying_bill,:format => :js),:class => 'fancybox'%>
    </td>
  </tr>
  <tr>
    <td>备注</td>
    <td colspan='3'><%=resource.note%></td>
    <td>状态</td>
    <td><%=resource.human_state_name%></td>
  </tr>
  <%if resource.gerror_authorize.present?%>
    <tr>
      <td>核销时间</td>
      <td><%=resource.gerror_authorize.bill_date.strftime("%Y-%m-%d")%></td>
      <td colspan='3'>核销人</td>
      <td><%=resource.gerror_authorize.user %></td>
    </tr>
    <tr>
      <td>核销信息</td>
      <td colspan='5'><%=resource.gerror_authorize.note %></td>
    </tr>
  <%end%>
</table>
